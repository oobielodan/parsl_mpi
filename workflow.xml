<tool id='alvaro_singlecluster_parsl_demo' name='alvaro_singlecluster_parsl_demo'>
  <command interpreter='bash'>parsl_wrapper.sh</command>
  <inputs>
      <param 
          name='srun_cmd' 
          label='SLURM srun command' 
          help='' 
          type='text' 
          value='srun --exclusive --nodes=1 --partition=compute --ntasks-per-node=2' 
          width='100%'>
      </param>
      <param 
          name='repeats' 
          label='Number of parallel MPI runs' 
          type='integer' 
          min='1' 
          max='8' 
          help='Number of times the run_mpi parsl app is launched in parallel' 
          value='1' 
          width='25%'>
      </param>
      <param 
          name='np' 
          label='Number processors to run on per MPI run' 
          type='integer' 
          min='2' 
          max='128' 
          help='Number of times the run_mpi parsl app is launched in parallel' 
          value='2'
          width='25%'>
      </param>
      <param 
          name='mpi_dir' 
          label='Directory with MPI installation' 
          help='' 
          type='text' 
          value='/contrib/__PW_USER__/ompi/' 
          width='50%'>
      </param> 
  </inputs>
  <outputs>
  </outputs>
</tool>
